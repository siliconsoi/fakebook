<% post.comments.each do |comment|%>
	<div class="comments" >
		<%= image_tag comment.user.avatar.url(:thumb), :class => 'user_comment_avatar' %>
			<span><a href="#"><%= comment.user.firstname %> </a>: <%= comment.body %></span>
			<div class='comment-time'><%="#{time_ago_in_words(comment.created_at)} ago "%></div>
	</div>
<%end%>
