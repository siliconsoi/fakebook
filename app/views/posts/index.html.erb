<div class="user_detail span3">
	<%= render  :partial => "partial/user_detail" %>
</div>

<div class="span8">
	  <div class="well sidebar-nav">
	  	<%= render :partial => "partial/new_post" %>
	  </div>
	<% @feeds.each do |post| %>
	  <div class="well">
	  	<%= render :partial => "partial/poster_details", :locals => {:post => post} %>
		<ul class="user_post_comments">
			<%= render :partial => "partial/each_comment", :locals => {:post => post} %>
	  	</ul>
	  	<%= render :partial => "partial/form_for_comment", :locals => {:post => post} %>
	  </div>
    <% end %>
    <% if !@next_page.empty? %>
	    <div style="padding-left: 270px;" ><%= link_to 'Mooooore', posts_path, :class => "btn more_page btn-primary" %></div>
    <% end %>
</div>
